[core]
    pager = delta

[interactive]
    diffFilter = delta
[add.interactive]
    useBuiltin = false # required for git 2.37.0

[delta]
    navigate = true     # use n and N to move between diff sections
    ; light = false     # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)
    ; features = side-by-side
    syntax-theme = Coldark-Dark
    ; syntax-theme = gruvbox-dark

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default
[maintenance]
	repo = /home/sedlund/.zsh/fast-syntax-highlighting
	repo = /home/sedlund/.zsh/history-search-multi-word
	repo = /home/sedlund/.zsh/ohmyzsh
	repo = /home/sedlund/.zsh/powerlevel10k
	repo = /home/sedlund/.zsh/znap
	repo = /home/sedlund/.zsh/zsh-autoenv
	repo = /home/sedlund/.zsh/zsh-autosuggestions
	repo = /home/sedlund/.zsh/zsh-completions
	repo = /home/sedlund/.zsh/zsh-history-substring-search
