#!/bin/sh

find . -regextype egrep -regex ".*\.(avi|mp4|mkv|webm)$" -print0 \
  | xargs --null -I{} --max-procs "$(nproc)" \
    sh -c " \
      ffprobe \"{}\" 2>&1 \
        | egrep 'Input|bitrate' \
        | sed --null-data 's#Input.*from ##; s# start: .*,##; s#:\n #:#' \
      " \
  | sort -t: -n -k6
